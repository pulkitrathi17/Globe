<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="Language and Location Settings">
        <ListPreference
                android:key="LANGUAGE"
                android:title="Language (Search)"
                android:summary="%s"
                android:defaultValue="en"
                android:entries="@array/languageEntries"
                android:entryValues="@array/languageValues"/>

        <ListPreference
                android:key="LOCATION"
                android:title="Location (Top News)"
                android:summary="%s"
                android:defaultValue="in"
                android:entries="@array/countryEntries"
                android:entryValues="@array/countryValues"/>
    </PreferenceCategory>
</PreferenceScreen>